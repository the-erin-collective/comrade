{
  "name": "comrade",
  "displayName": "Comrade",
  "description": "A flexible coding agent system with configurable LLM backends",
  "version": "0.0.1",
  "publisher": "comrade",
  "engines": {
    "vscode": "^1.102.0"
  },
  "browser": "./out/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "comrade.helloWorld",
        "title": "Hello World",
        "category": "Comrade"
      },
      {
        "command": "comrade.openAgentConfig",
        "title": "Open Agent Configuration",
        "category": "Comrade"
      },
      {
        "command": "comrade.testAgentConnectivity",
        "title": "Test Agent Connectivity",
        "category": "Comrade"
      },
      {
        "command": "comrade.showRegistryStats",
        "title": "Show Agent Registry Statistics",
        "category": "Comrade"
      },
      {
        "command": "comrade.openPersonalityConfig",
        "title": "Open Personality Configuration",
        "category": "Comrade"
      },
      {
        "command": "comrade.createDefaultPersonality",
        "title": "Create Default Personality File",
        "category": "Comrade"
      },
      {
        "command": "comrade.checkPersonalityStatus",
        "title": "Check Personality Status",
        "category": "Comrade"
      },
      {
        "command": "comrade.runContextAnalysis",
        "title": "Run Context Analysis",
        "category": "Comrade"
      },
      {
        "command": "comrade.readContext",
        "title": "Read Workspace Context",
        "category": "Comrade"
      },
      {
        "command": "comrade.checkContext",
        "title": "Check Context Freshness",
        "category": "Comrade"
      },
      {
        "command": "comrade.cancelOperation",
        "title": "Cancel Current Operation",
        "category": "Comrade"
      },
      {
        "command": "comrade.openApiConfig",
        "title": "Open API Configuration",
        "category": "Comrade"
      },
      {
        "command": "comrade.openMcpConfig",
        "title": "Open MCP Configuration",
        "category": "Comrade"
      },
      {
        "command": "comrade.openSettings",
        "title": "Open Comrade Settings",
        "category": "Comrade"
      },
      {
        "command": "comrade.showErrorRecovery",
        "title": "Show Error Recovery Options",
        "category": "Comrade"
      },
      {
        "command": "comrade.retryLastOperation",
        "title": "Retry Last Operation",
        "category": "Comrade"
      },
      {
        "command": "comrade.sidebar.focus",
        "title": "Focus Comrade Sidebar",
        "category": "Comrade"
      },
      {
        "command": "comrade.statusBar.quickAccess",
        "title": "Comrade Quick Access",
        "category": "Comrade"
      },
      {
        "command": "comrade.help",
        "title": "Comrade Help",
        "category": "Comrade"
      }
    ],
    "views": {
      "comrade": [
        {
          "id": "comrade.sidebar",
          "name": "Comrade",
          "when": "true",
          "type": "webview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "comrade",
          "title": "Comrade",
          "icon": "$(robot)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "comrade.sidebar",
        "contents": "Welcome to Comrade! ðŸ¤–\n\nYour AI coding companion is ready to help.\n\n[$(gear) Open Settings](command:comrade.openSettings)\n[$(person) Configure Personality](command:comrade.openPersonalityConfig)\n[$(plug) Setup Agents](command:comrade.openAgentConfig)\n\n---\n\n**Quick Start:**\nâ€¢ No workspace setup required\nâ€¢ Works with any folder or project\nâ€¢ Ready to assist with coding tasks\n\n[$(question) Need Help?](https://github.com/comrade-ai/comrade-vscode-extension#readme)\n[$(bug) Report Issue](https://github.com/comrade-ai/comrade-vscode-extension/issues)"
      }
    ],
    "configuration": {
      "title": "Comrade",
      "properties": {
        "comrade.agents": {
          "type": "array",
          "description": "Available agent configurations with capabilities",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the agent"
              },
              "name": {
                "type": "string",
                "description": "Display name for the agent"
              },
              "provider": {
                "type": "string",
                "enum": [
                  "openai",
                  "anthropic",
                  "ollama",
                  "custom"
                ],
                "description": "LLM provider type"
              },
              "model": {
                "type": "string",
                "description": "Model name/identifier"
              },
              "endpoint": {
                "type": "string",
                "description": "Custom API endpoint (for custom providers)"
              },
              "temperature": {
                "type": "number",
                "minimum": 0,
                "maximum": 2,
                "default": 0.7,
                "description": "Temperature setting for response randomness"
              },
              "maxTokens": {
                "type": "number",
                "minimum": 1,
                "description": "Maximum tokens for responses"
              },
              "timeout": {
                "type": "number",
                "minimum": 1000,
                "default": 30000,
                "description": "Request timeout in milliseconds"
              },
              "capabilities": {
                "type": "object",
                "description": "Agent capabilities metadata",
                "properties": {
                  "hasVision": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether the agent can process images"
                  },
                  "hasToolUse": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether the agent can use tools/functions"
                  },
                  "reasoningDepth": {
                    "type": "string",
                    "enum": [
                      "basic",
                      "intermediate",
                      "advanced"
                    ],
                    "default": "intermediate",
                    "description": "Reasoning capability level"
                  },
                  "speed": {
                    "type": "string",
                    "enum": [
                      "fast",
                      "medium",
                      "slow"
                    ],
                    "default": "medium",
                    "description": "Response speed tier"
                  },
                  "costTier": {
                    "type": "string",
                    "enum": [
                      "low",
                      "medium",
                      "high"
                    ],
                    "default": "medium",
                    "description": "Cost tier for usage"
                  },
                  "supportedLanguages": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "default": [
                      "en"
                    ],
                    "description": "Supported natural languages"
                  },
                  "specializations": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "default": [
                      "code"
                    ],
                    "description": "Areas of specialization (e.g., code, analysis, debugging)"
                  }
                },
                "required": [
                  "hasVision",
                  "hasToolUse",
                  "reasoningDepth",
                  "speed",
                  "costTier"
                ]
              },
              "isEnabledForAssignment": {
                "type": "boolean",
                "default": true,
                "description": "Whether this agent can be automatically assigned to phases"
              }
            },
            "required": [
              "id",
              "name",
              "provider",
              "model",
              "capabilities"
            ]
          }
        },
        "comrade.assignment.defaultMode": {
          "type": "string",
          "enum": [
            "speed",
            "structure"
          ],
          "default": "speed",
          "description": "Default workflow mode for new sessions"
        },
        "comrade.mcp.servers": {
          "type": "array",
          "description": "MCP server configurations",
          "default": [],
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the MCP server"
              },
              "name": {
                "type": "string",
                "description": "Display name for the MCP server"
              },
              "command": {
                "type": "string",
                "description": "Command to start the MCP server"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [],
                "description": "Command line arguments for the MCP server"
              },
              "env": {
                "type": "object",
                "description": "Environment variables for the MCP server"
              },
              "timeout": {
                "type": "number",
                "minimum": 1000,
                "default": 10000,
                "description": "Connection timeout in milliseconds"
              }
            },
            "required": [
              "id",
              "name",
              "command"
            ]
          }
        },
        "comrade.context.maxFiles": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "description": "Maximum files to include in context generation"
        },
        "comrade.context.maxTokens": {
          "type": "number",
          "default": 8000,
          "minimum": 100,
          "description": "Maximum tokens for context generation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "run-s build:webview tsc",
    "compile:test": "tsc -p tsconfig.test.json",
    "test:extension": "node ./out/test/run-test.js",
    "test:extension:legacy": "npm run compile && mocha out/test/integration/extension.test.js --timeout 25000 --reporter spec",
    "build:webview": "cd webview && npm run build",
    "tsc": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "test:unit": "npm run compile:test && mocha out/test/unit/**/*.test.js --timeout 15000 --reporter spec",
    "test:integration": "npm run compile:test && node out/test/runTests.js",
    "test:integration:anthropic": "npm run compile:test && mocha out/test/integration/anthropic-provider-integration.test.js --timeout 30000 --reporter spec",
    "test:integration:streaming": "npm run compile:test && mocha out/test/integration/streaming-integration.test.js --timeout 30000 --reporter spec",
    "test:integration:tools": "npm run compile:test && mocha out/test/integration/tool-calling-integration.test.js --timeout 30000 --reporter spec",
    "test:integration:caching": "npm run compile:test && mocha out/test/integration/availability-caching-load.test.js --timeout 45000 --reporter spec",
    "test:integration:comprehensive": "npm run compile:test && mocha out/test/integration/comprehensive-integration.test.js --timeout 60000 --reporter spec",
    "test:integration:all": "npm run compile:test && node src/test/run-integration-tests.js",
    "test:validate-integration": "node src/test/validate-integration-tests.js",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:comprehensive": "npm run compile && npm run test:unit && npm run test:integration && npm run test:error-scenarios && npm run test:integration:comprehensive",
    "test:error-scenarios": "npm run compile && mocha out/test/unit/error-scenarios.test.js --timeout 20000 --reporter spec",
    "test:config": "npm run compile && mocha out/test/unit/enhanced-config.test.js --timeout 15000 --reporter spec",
    "test:chat": "npm run compile && mocha out/test/unit/enhanced-chat.test.js --timeout 15000 --reporter spec",
    "test:registry": "npm run compile && mocha out/test/unit/enhanced-registry.test.js --timeout 15000 --reporter spec",
    "test:workflow": "npm run compile && mocha out/test/integration/workflow.test.js --timeout 30000 --reporter spec",
    "test:watch": "npm run compile && mocha out/test/**/*.test.js --timeout 15000 --reporter spec --watch",
    "test:coverage": "npm run compile && nyc mocha out/test/**/*.test.js --timeout 20000",
    "check-types": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.19.9",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.102.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "chai": "^5.2.1",
    "eslint": "^9.25.1",
    "glob": "^8.1.0",
    "mocha": "^11.7.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
